@model IEnumerable<EuropeanParliamentTracker.Domain.Entities.VoteResult>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.VoteType)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Parliamentarian)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Vote)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.VoteType)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Parliamentarian.Firstname) @Html.DisplayFor(modelItem => item.Parliamentarian.Lastname)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Vote.Name)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.VoteResultId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.VoteResultId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.VoteResultId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
